{
  "name": "Colon",
  "version": "1.2.0",
  "description": "A flexible text editor",
  "author": "Harendra Chhekur <820121223505e@gmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "publish": "build --linux -p never",
    "pack": "build --dir",
    "dist": "build"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "electron": "^4.0.0",
    "electron-builder": "^20.38.4"
  },
  "dependencies": {
    "electron-log": "^2.2.17",
    "electron-updater": "^4.0.6",
    "showdown": "^1.8.6"
  },
  "build": {
    "appId": "com.chhekur.colon",
    "mac": {
      "category": "",
      "target": [
        "zip",
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"  
      ],
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "chhekur",
        "repo": "colon-ide"
      }
    ]
  }
}
